{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "lib": [
      "dom",
      "es5"
    ],
    "module": "system",
    "moduleResolution": "node",
    "target": "es5",
    "outDir": "./dist",
    "typeRoots": [
      "../node_modules/@types"
    ],
    "types": [
      "core-js"
    ]
  },
  "exclude": [
    "node_modules"
  ],
  "compileOnSave": false,
  "atom": {
    "rewriteTsconfig": false
  },
  "files": [
    "heilbaum_photoswipe.ts",
    "src/heilbaum_photoswipe.component.ts",
    "src/heilbaum_photoswipe.ts",
    "src/module.ts",
    "src/photoswipe/styles.ts",
    "src/photoswipe/template.ts"
  ],
  "angularCompilerOptions": {
    "strictMetadataEmit": true,
    "skipTemplateCodegen": true
  }
}